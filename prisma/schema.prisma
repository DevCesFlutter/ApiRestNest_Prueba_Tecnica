generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product{
  id Int @id @default(autoincrement())
  sku String? @unique
  name String @unique
  stock Int?
  description String?
  price Float
  image String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  version     Int      @default(1)
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("operaciones") // roles: 'admin', 'operaciones'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}